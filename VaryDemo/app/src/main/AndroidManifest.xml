<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.lvf"
    android:versionCode="1"
    android:versionName="1.0">

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21"/>
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-feature android:name="android.hardware.Camera" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity android:name="com.android.lvf.Main">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.lvf.Standard"
            android:allowTaskReparenting="true"
            android:launchMode="standard">
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
            </intent-filter>
        </activity>
        <activity
            android:name="com.android.lvf.SingleTop"
            android:launchMode="singleTop"/>
        <activity
            android:name="com.android.lvf.SingleTask"
            android:launchMode="singleTask"
            android:taskAffinity="com.example.hello"/>
        <activity
            android:name="com.android.lvf.SingleInstance"
            android:launchMode="singleInstance"/>
        <activity
            android:name="com.android.lvf.TestSurfaceViewAndTextureView"
            android:launchMode="singleInstance"/>

        <service
            android:name="com.android.lvf.RemoteComputService"
            android:process="com.android.yy.lvf.remote"/>
    </application>

</manifest>